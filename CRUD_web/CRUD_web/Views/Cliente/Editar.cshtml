@model CRUD_web.Models.Cliente;
<div clas="row">
    <div class="col-sm-8 offset-sm-2">
        <h2>Editar cliente</h2>
        <form asp-controller="Cliente" asp-action="Editar" method="post">
            <input asp-for= "Idcliente" type ="hidden" />
            <div class="mb-3">
                <label>Nombre</label>
                <input class="form-control" asp-for="Nombre" type="text" />
            </div>
            <div class="mb-3">
                <label>Email</label>
                <input class="form-control" asp-for="Email" type="text" />
            </div>
            <div class="mb-3">
                <label>Edad</label>
                <input class="form-control" asp-for="Edad" type="number" min="0" max="120" />
            </div>
            <div class="mb-3">
                <button class="btn btn-primary" type="submit">Hecho</button>
                <a asp-controller="Cliente" asp-action="Lista" class=" = btn btn-warning">Regresar</a>
            </div>
        </form>




    </div>


</div>