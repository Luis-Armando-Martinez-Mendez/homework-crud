@{
}
<<div clas="row">
    <div class="col-sm-8 offset-sm-2">
        <h2>Lista clientes</h2>
        <a asp-controller="Cliente" asp-action="Nuevo" class="= btn btn-success mb-3">Nuevo</a>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nombre</th>
                    <th>Email</th>
                    <th>Edad</th>
                </tr>

            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Idcliente</td>
                        <td>@item.Nombre</td>
                        <td>@item.Email</td>
                        <td>@item.Edad</td>
                        <td>
                            <a asp-controller="Cliente"
                               asp-action="Editar"
                               asp-route-id="@item.Idcliente"
                               class="= btn btn-primary">
                                Editar
                            </a>

                            <a asp-controller="Cliente"
                               asp-action="Eliminar"
                               asp-route-id="@item.Idcliente"
                               onclick="return validar()"
                               class="= btn btn-danger">
                                Eliminar
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


@section Scripts
{
    <script>
        function validar() 
        {
            return confirm("¿Estas seguro de eliminar este cliente?")
        }
    </script>


}
